 <% if logged_in? %>
  <div class="card text-center border-primary">
      <div class="card-body text-center">
          <% if @user.image? %>
          <%= image_tag @user.image.thumb.url %>
          <% else %>
          <%= image_tag 'default.jpg', :size =>'200x200' %>
          <% end %>
        <h4 class="card-title text-center"><%= current_user.name %></h4>
        <div class='side-profile'>
        <ul class="nav nav-justified mb-3">
          <li class="nav-item prof-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー中<br><span class="badge badge-secondary"><%= @count_followings %></span>人</a></li>
          <li class="nav-item prof-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー<br><span class="badge badge-secondary"><%= @count_followers %></span>人</a></li>
        </ul>
        </div>
        <div>
        <ul class="nav nav-justified mb-3">    
          <li class="nav-item prof-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">レシピ<br><span class="badge badge-secondary"><%= @count_recipes %></span>作品</a></li>      
        </ul>
        </div>
  　   </div>
  </div>


 
<div class="side-container text-center">
<h6><%= link_to (all_recipes_recipes_path) do %>全てのレシピを見る<i class="fas fa-eye"></i><% end %></h6>
<h6><%= link_to (ranking_recipes_path) do %>レシピランキング<i class="fas fa-crown"></i><% end %></h6>
<h6><%= link_to (contributor_rank_users_path) do %>投稿者ランキング<i class="fas fa-user-friends"></i><% end %></h6>
</div>
<% else %>


<% end %>