

<!--表示したいカラムをご自由に-->
<div class='wrapper mt-2'>
<div class='row mt-3'>
    <div class='col-md-3 sidebar'>
        <%=render'layouts/sidebar',user: @user %>
    </div>

    <div class='offset-md-3 col-md-9'>
        <div class='row mt-2'>
        <h3 class='col-md-12'>投稿者ランキング</h3>
        <h4 class='offset-md-9 col-md-3'><%= link_to new_recipe_path, class: "link" do %>レシピを投稿する
        <i class="fas fa-receipt"></i><% end %></h4>
        
        <% @user_recipe_like_ranks.each.with_index(1) do |user, i| %>
        <div class="card text-center border-success mb-2">
        <h4 class="card-title text-center">第<%= i %>位</h4>
        <div class="card-body text-center">
        <% if @user.image? %>
          <%= image_tag user.image.thumb.url %>
        <% else %>
          <%= image_tag 'default.jpg', :size =>'200x200' %>
        <% end %>
        <h4 class="card-title text-center"><%= link_to user_path(user), class: "recipe-user-name" do %><%= user.name %>
           さん<% end %></h4>
      </div>
    </div>
    <% end %>
</div>
</div>




