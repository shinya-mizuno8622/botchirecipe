<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <% if user.image? %>
        <%= image_tag user.image.url,:size =>'100x100' %>
        <% else %>
        <%= image_tag 'default.jpg', :size =>'100x100' %>
        <% end %>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>

<% if false %><img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt=""><% end %>