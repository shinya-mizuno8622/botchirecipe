<div class="all-recipe row">
<% recipes.each.each.with_index(1) do |recipe, i| %>
<div class='col-md-4'>
   <h4><%= i %></h4>
   <%= link_to (image_tag "#{recipe.image.thumb_recipe.url}", {class: "photo"}), recipe_path(recipe.id) %>
   <p><%= link_to recipe.title,recipe_path(recipe) %></p>
   <p class='time'>完成時間<%= recipe.time %>分</p>
   <%= link_to user_path(recipe.user), class: "recipe-user-name" do %>投稿者　<%= recipe.user.name %>さん<% end %>
</div>
<% end %>
</div>