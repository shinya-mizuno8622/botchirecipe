<% if logged_in? %>
      <%= form_with(model: @recipe, local: true) do |f| %>
        <div class="form-group">
          
        <div class="row pb-2">
          <div class='col-md-2 text-right'>
          <%= f.label :title, '料理名' %>
          </div>
          <div class='col-md-3'>
          <%= f.text_area :title ,class: 'form-control'%>
          </div>
        </div>
          
        <div class="row pb-2">
          <div class='col-md-2 text-right'>
          <%= f.label :description, '料理の紹介' %>
          </div>
          <div class='col-md-10'>
          <%= f.text_area :description, class: 'form-control'%>
          </div>
        </div>
        
        <div class="row pb-2">
          <div class='col-md-2 text-right'>
          <%= f.label :process, 'レシピ（作る工程）' %>
          </div>
          <div class='col-md-10'>
          <%= f.text_area :process,placeholder: process_placeholder, class: 'form-control',size: "40x20" %>
          </div>
        </div> 
        
        <div class="row pb-2">
          <div class='col-md-2 text-right'>
          <%= f.label :time, '料理完成までの時間' %>
          </div>
          <div class="col-md-1">
          <%= f.text_area :time,:placeholder => "半角数字", class: 'form-control' ,size: "1x1" %>
          </div>
          <div　class="col-md-1 text-left">
          分
          </div>
        </div>
        
        <div class="row pb-2">
        <div class="col-md-3 field text-right">
          <%= f.label :image, '画像' %>
          <%= f.file_field :image %>
        </div>
        </div>
        
        <div class='text-center'>
        <%= f.submit '続いて材料を登録する', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
<% else %>
  <%= link_to 'ログインしてください', login_path, class: 'btn btn-lg btn-primary' %>
<% end %>